<div class="container my-4">
  <div class="table-responsive rounded-3">
    <table id="carpoolTable" class="table table-striped table-bordered text-center align-middle">
      <thead class="table-dark">
        <tr>
          <th>제목</th>
          <th>출발지</th>
          <th>목적지</th>
          <th>좌석 수</th>
          <th>종류</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @pools.each do |pool| %>
          <tr>
            <td><%= link_to pool.name, pool_path(pool) %></td>
            <td><%= link_to pool.start_place.name, pool_path(pool) %></td>
            <td><%= link_to pool.end_place.name, pool_path(pool) %></td>
            <td><%= pool.user_max %> 좌석</td>
            <td>
              <% if pool.pool_type=="car" %>
                자동차
              <% else %>
                택시
              <% end %>
            </td>
            <td>
              <% if pool.end_at <= Time.current %>
                <button class="btn btn-secondary btn-sm h-100 d-flex m-auto" disabled>마감</button>
              <% else %>
                <% if pool.bookings.where(user: current_user).any? %>
                  <button class="btn btn-success btn-sm m-auto" disabled>참여 중</button>
                <% else %>
                  <%= link_to '참가하기', join_pool_path(pool), class: "btn btn-primary btn-sm" %>
                <% end %>
              <% end %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
    <%== pagy_bootstrap_nav(@pagy) %>
    <div class="text-start">
      <%= link_to "처음처럼", root_path, class: "btn btn-success me-2" %>
      <%= link_to "카풀 만들기", new_pool_path, class: "btn btn-primary me-2" %>
    </div>
  </div>
</div>
