<table id="carpoolTable" class="table table-striped table-bordered rounded-3">
  <thead class="table-dark">
      <tr>
          <th>출발지</th>
          <th>목적지</th>
          <th>좌석 수</th>
          <th>종류</th>
      </tr>
  </thead>
  <tbody>
    <% @pools.each do |pool| %>
      <tr data-href="new.html">
        <td><%= pool.start_place.name %></td>
        <td><%= pool.end_place.name %></td>
        <td><%= pool.user_max %> 좌석</td>
        <td>
          <% if pool.pool_type=="car" %>
            자동차
          <% else %>
            택시
          <% end %>
        </td>  
      </tr>
    <% end %>
  </tbody>
</table>