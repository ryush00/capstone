        }

        /* The full content (initially hidden) */
        .draggable-content {
            display: none;
            padding: 20px;
            overflow-y: auto;
            max-height: calc(80vh - 100px);
        }

        /* Show the content when the panel is expanded */
        .draggable-container.open .draggable-content {
            display: block;
        }

        /* Hide form and list initially */
        .carpool-form,
        .carpool-list {
            display: none;
        }

        /* My Information panel styles */
        .my-info-panel {
            position: fixed;
            right: 0;
            top: 0;
            width: 300px;
            height: 100%;
            background-color: #f1f1f1;
            box-shadow: -2px 0px 5px rgba(0, 0, 0, 0.5);
            padding: 20px;
            transform: translateX(100%);
            transition: transform 0.6s ease;
            z-index: 1000;
        }

        /* Show the panel when it is active */
        .my-info-panel.active {
            transform: translateX(0);
        }

        /* Hidden by default */
        .hidden {
            transform: translateX(100%);
        }

        /* Style for the navigation menu */
        nav ul {
            list-style: none;
            padding: 0;
        }

        nav ul li {
            display: inline-block;
            margin-right: 20px;
            cursor: pointer;
        }

        li {
            list-style-type: none;
        }

        /* Overlay */
        .overlay {
            position: fixed;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: rgba(0, 0, 0, 0.5);
            display: none;
            z-index: 999;
        }

        .overlay.active {
            display: block;
        }

        #map {
