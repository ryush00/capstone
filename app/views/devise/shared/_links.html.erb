<div class="text-center mt-3">
  <ul class="list-unstyled">
    <% if devise_mapping.confirmable? || devise_mapping.registerable? || devise_mapping.recoverable? %>
      <li>
        <% if devise_mapping.registerable? %>
          <%= link_to "회원가입", new_registration_path(resource_name) %>
        <% end %>
        
        <% if devise_mapping.recoverable? %>
          | <%= link_to "비밀번호 찾기", new_password_path(resource_name) %>
        <% end %>

        <% if devise_mapping.confirmable? %>
          | <%= link_to "인증메일 다시받기", new_confirmation_path(resource_name) %>
        <% end %>
      </li>
    <% end %>
  </ul>
</div>
