<h2 class="text-center mb-4">Forgot your password?</h2>
    <div class="container mt-4">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card shadow-sm">
                    <div class="card-header bg-primary text-white text-center">
                        <h4>Password Reset</h4>
                    </div>
                    <div class="card-body">
                        <form id="passwordResetForm">
                            <div class="form-group">
                                <label for="email" class="font-weight-bold">이메일 주소:</label>
                                <input type="email" id="email" name="email" class="form-control" required placeholder="이메일을 입력하세요">
                            </div>
                            <div class="form-group text-center">
                                <button type="submit" class="btn btn-primary btn-block">Send me reset password instructions</button>
                            </div>
                        </form>
                    </div>
                    <div class="card-footer text-center text-muted">
                        Please enter the email address associated with your account.
                    </div>
                </div>
            </div>
        </div>
    </div>